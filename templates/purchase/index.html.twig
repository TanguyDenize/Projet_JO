{% extends "base.html.twig" %}

{% block title %}
	Mes commandes
{% endblock %}

{% block body %}
	<h1>Mes commandes</h1>

	<table class="table">
		<thead>
			<tr>
				<th>N° de commande</th>
				<th>Date de commande</th>
				<th>Offres</th>
				<th>Total</th>
			</tr>
		</thead>
		<tbody>
			{% for p in purchases %}
				<tr>
					<td>{{ p.id }}</td>
					<td>{{ p.purchasedAt | date('d/m/Y H:i') }}</td>
					<td>
						<ul>
							{% for item in p.purchaseItems %}
								<li>{{ item.quantity }}x
									{{ item.offerName }}
									({{ item.total / 100}}
									€)
								</li>
							{% endfor %}
						</ul>
					</td>
					<td>{{ p.total / 100 }}
						€</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
