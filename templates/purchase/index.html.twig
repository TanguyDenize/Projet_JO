{% extends "base.html.twig" %}

{% block title %}
	Mes commandes
{% endblock %}

{% block body %}
	<h1>Mes commandes</h1>

	<table class="table">
		<thead>
			<tr>
				<th>N° de commande</th>
				<th>Email</th>
				<th>Date de commande</th>
				<th>Total</th>
			</tr>
		</thead>
		<tbody>
			{% for p in purchases %}
				<tr>
					<td>{{ p.id }}</td>
					<td>{{ p.email }}</td>
					<td>...</td>
					<td>{{ p.total / 100 }}
						€</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>
{% endblock %}
