{% extends "base.html.twig" %}

{% block title %}
	Billeterie
{% endblock %}

{% block body %}
	<h1>Billeterie</h1>

	{#Cartes des offres#}
	<div class="row">
		{% for o in offers %}
			<div class="col-lg-4 col-md-6 mb-4">
				<div class="card">
					<img src="{{ asset(o.picture) }}" alt="Image offre" class="img-fluid">
					<div class="card-body">
						<h3 class="card-title">{{o.name}}
						</h3>
						<span class="badge rounded-pill bg-primary">Prix :
							{{o.price / 100}}
							&euro;
						</span>
						<p class="card-text">{{o.description}}</p>
						<a href="#" class="btn btn-primary btn-sm">Ajouter au panier</a>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>

	<hr>

	{#Instructions#}
	<h2>Instructions :</h2>

	<div class="row">
		{% include "shared/warning.html.twig" with {
				'color' : 'bg-primary',
				'icon' : 'fa-solid fa-ticket',
				'text' : "Lors de l'achat de votre billet, il vous sera envoyé par mail sous la forme d'un e-billet, contenant un QRcode à faire scanner le jour de votre visite."
			} %}
		{% include "shared/warning.html.twig" with {
				'color' : 'bg-warning',
				'icon' : 'fa-solid fa-triangle-exclamation',
				'text' : 'Il est fortement déconseillé de faire apparaitre le QRcode de votre e-billet sur les réseaux sociaux, ce qui pourrait compromettre la sécurité de votre e-billet et donc de votre accès aux Jeux Olympiques'
			} %}
	</div>
	<br>

{% endblock %}
